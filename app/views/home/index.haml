/ Navigation
%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
  .container
    %a.navbar-brand{:href => "#"} RubyGems
    %button.navbar-toggler{"aria-controls" => "navbarResponsive", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarResponsive", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    #navbarResponsive.collapse.navbar-collapse
      %ul.navbar-nav.ml-auto
        %li.nav-item.active
          %a.nav-link{:href => "#"}
            Rails DB
            %span.sr-only (current)
        -if user_signed_in?
          %li.nav-item
            %a.nav-link{:href => "rails/db"}
              Database

/ Page Content
.container
  .row
    .col-lg-4.text-center
      %h1.mt-5 Demo
    .col-lg-8
      %br
      %p.lead 
        Combine Rails DB with Devise Login Function.
        %br
        %a{href: @github_link}=@github_link
      %ul.list-unstyled
        %li Version: v2.0.6
        %li Last Updated: 26th Mar 2019
  -if user_signed_in?
    .row
      .col-lg-3
      .col-lg-6
        .card
          .card-block{style: "padding:20px"}
            .text-center
              %h2 You are signed in.
              Please get into Rails DB
              = link_to("here", "rails/db", class: "" )              
              \.
              %br
              %br
              = link_to("Logout", destroy_user_session_path, data: {:method => :delete }, class: "btn  btn-secondary " )
  -else    
    .row.text-center
      .col-lg-3
      .col-lg-6
        .card
          .card-block{style: "padding:20px"}
            %u email: demo@demo.com
            %br
            %u password: demodemo
            %br
            Please sign in to get into Rails DB.
    .row
      .col-lg-3
      .col-lg-6
        .card
          .card-block{style: "padding:20px;min-height:200px"}
            %h2 Log in
            = simple_form_for(User.new, url: session_path(:user)) do |f|
              .form-inputs
                = f.input :email, required: false, autofocus: true
                = f.input :password, required: false
              .form-actions
                = f.button :submit, "Log in", class: "btn btn-primary"
      .col-lg-3