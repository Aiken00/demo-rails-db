/ Page Content
.container
  .row
    .col-lg-4.text-center
      %h1.mt-5 Demo
    .col-lg-8
      %br
      %p.lead 
        Combine Rails DB with Devise Login Function.
        %br
        %a{href: @github_link}=@github_link
      %ul.list-unstyled
        %li Version: v1.6.0
        %li Last Updated: 23rd Dec 2017 
      
  .row.text-center
    .col-lg-3
    .col-lg-6
      .card
        .card-block{style: "padding:20px"}
          %u
            email: demo@demo.com
            %br
            password: demodemo
  .row
    .col-lg-3
    .col-lg-6
      .card
        .card-block{style: "padding:20px;min-height:200px"}
          %h2 Log in
          = simple_form_for(User.new, url: session_path(:user)) do |f|
            .form-inputs
              = f.input :email, required: false, autofocus: true
              = f.input :password, required: false
            .form-actions
              = f.button :submit, "Log in", class: "btn btn-primary"
    .col-lg-3